<% if @answer.errors.present? %>

<% @answer.errors.full_messages.each do |message| %>
    $('#validation_errors').append('<%= message %>')
<% end %>

  <% else %>
      $('#answers_list').append('<%= j render "shared/answer", answer: @answer %>')
    $('#answer_body').val('')
<% end %>


$('#flash').html('<%= j render "shared/flash" %>')

