<% if @question.errors.present? %>

<% @question.errors.full_messages.each do |message| %>
    $('#validation_errors').append('<%= message %>')
<% end %>

  <% else %>
      $('.question').html('<%= j render "questions/q_title_body", question: @question %>')
<% end %>


$('#flash').html('<%= j render "shared/flash" %>')


